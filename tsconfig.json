{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "declaration": true,
    "outDir": "./dist",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "utils/*": ["utils/*"],
      "arweave/*": ["arweave/*"],
      "types": ["types"],
      "mode": ["mode"],
      "manifest": ["manifest"],
      "aggregators": ["aggregators"],
      "broadcasters": ["broadcasters"]
    }
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*", "src/**/*.json","./package.json", "index.ts"],
  "exclude": ["node_modules", "tools", "test"]
}
